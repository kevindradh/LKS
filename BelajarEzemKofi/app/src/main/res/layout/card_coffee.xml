<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_marginTop="64dp"
        android:layout_width="224dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#156545"
        app:cardCornerRadius="20dp"
        android:background="#156545"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <LinearLayout
            android:paddingHorizontal="16dp"
            android:paddingTop="92dp"
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Classic Americano"/>

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6.8"
                app:chipBackgroundColor="#37765D"
                android:textColor="@color/white"
                app:chipIconTint="@color/white"
                app:chipIcon="@drawable/outline_bluetooth_24"/>

            <TextView
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$12.9"/>
            
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>


    <ImageView
        android:layout_width="152dp"
        android:layout_height="152dp"
        android:src="@drawable/classic_americano"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>